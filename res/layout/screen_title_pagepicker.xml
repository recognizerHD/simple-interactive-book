<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_gravity="bottom" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:id="@+id/title_fl_main">
  <!--   -->
    <ImageView android:adjustViewBounds="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/m80_sc_a01c01_01_main" android:scaleType="centerCrop" android:id="@+id/title_iv_main"></ImageView>
    <ImageView android:adjustViewBounds="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/title_iv_Background_fade" android:scaleType="centerCrop" android:src="@drawable/shadow"></ImageView>

    <LinearLayout android:id="@+id/title_ll_top" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="20dip">
